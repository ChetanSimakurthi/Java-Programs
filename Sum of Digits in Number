import java.util.Scanner;

public class SumOfDigitsInNumber {
	public static void main(String args[]) {
		Scanner in = new Scanner(System.in);
		System.out.println("Enter a number = ");
		int a = in.nextInt();
		int sum =0;
		while(a!=0) {
			sum += a%10;
			a/=10;
		}
		System.out.println("Sum of Digis is = "+sum);
	}
}
